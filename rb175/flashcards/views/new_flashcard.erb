<form action="/<%= session[:username] %>/decks/<%= params[:id] %>/flashcard" method="post">

  <label for="question">Question:</label>
  <div>
    <input name="question" id="question">
  </div>

  <label for="answer">Answer:</label>
  <div>
    <textarea name="answer" id="answer" rows="10" cols="60"></textarea>
  </div>
  
  <button type="submit">Create flashcard</button>
  
</form>
