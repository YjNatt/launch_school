<h3><%= @recipe.name %></h3>
<form action="/recipe/<%= params[:id] %>/edit/ingredient" method="post">
  <label for="ingredient">Add Ingredient</label>
  <input name="ingredient" id="ingredient">
  <button type="submit">submit</button>
</form>

<ul>
  <% @recipe.ingredients.each do |id, ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
