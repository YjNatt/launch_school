<h1>Welcome to Cook Book</h1>
<a href="/recipe/new">Create recipe</a>

<ul>
  <% @recipes.each do |id, recipe| %>
    <li>
      <a href="/recipe/<%= id %>"><%= recipe.name %></a>
      <a href="/recipe/<%= id %>/edit">Edit</a>
      <form action="/recipe/<%= id %>/delete" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
